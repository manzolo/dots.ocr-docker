# dots.ocr - GPU with 12GB VRAM (e.g., RTX 3080 Ti, RTX 4070)
# Uses bitsandbytes quantization to fit in limited VRAM

VLLM_IMAGE=vllm/vllm-openai:v0.11.1
OCR_MODEL=rednote-hilab/dots.ocr
API_PORT=8000
VLLM_TOKEN=your-secret-token-here

GPU_MEMORY_UTILIZATION=0.90
MAX_MODEL_LEN=4096
MAX_NUM_SEQS=4
MAX_NUM_BATCHED_TOKENS=4096
MAX_IMAGES_PER_PROMPT=6

VLLM_EXTRA_ARGS=--quantization bitsandbytes --load-format bitsandbytes --enforce-eager
